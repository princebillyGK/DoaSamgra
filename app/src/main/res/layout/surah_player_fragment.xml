<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".surahplayer.SurahPlayerFragment">

        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/surah_list"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <com.example.jean.jcplayer.view.JcPlayerView
            android:visibility="gone"
            android:id="@+id/jcplayer"
            app:next_icon_color="@color/secondaryDarkColor"
            app:pause_icon_color="@color/secondaryDarkColor"
            app:play_icon_color="@color/secondaryDarkColor"
            app:previous_icon_color="@color/secondaryDarkColor"
            app:progress_color="@color/secondaryDarkColor"
            app:random_icon_color="@color/secondaryDarkColor"
            app:repeat_icon_color="@color/secondaryDarkColor"
            app:seek_bar_color="@color/secondaryDarkColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>